{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CMake Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/space-pixel-game/space-pixel-game", // Path to your executable
            "args": [], // Arguments to pass to the program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/space-pixel-game/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Task to run before launching the debugger
            "miDebuggerPath": "/usr/bin/gdb", // Path to gdb
            "logging": {
                "engineLogging": true
            },
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}